<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="5dp"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/color"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button"></Button>

    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <Button
        android:id="@+id/hasSubTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/taskTitle"
        android:background="@drawable/ic_has_subtask"
        android:clickable="false"
        android:visibility="visible" />

    <TextView
        android:id="@+id/taskDescription"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/taskTitle"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/taskDescription"
        android:background="#C7C4C4" />

</RelativeLayout>